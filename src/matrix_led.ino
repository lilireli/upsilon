  // we need row HIGH and col LOW to have led on
  for (int i=0; i<size_square; i++) {
    digitalWrite(cols[i], HIGH);

    for (int j=0; j<size_square; j++) {
      int pixel = matrix[i*(size_square-1) + j];
      if ( pixel == 1){
        digitalWrite(cols[i], LOW);
        digitalWrite(rows[j], HIGH);
      }
    }
  }
}

